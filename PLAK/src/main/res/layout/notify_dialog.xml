<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/notif_dialog_C_rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#55000000" >

    <LinearLayout
        android:visibility="invisible"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:id="@+id/notif_dialog_ContentDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/kotakmerah"
        android:padding="24dp" >

        <TextView
            android:id="@+id/notif_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/man_dial_title"
            android:textAppearance="@style/txtPrefBesar"
            android:textColor="@color/putiah" />

        <View
            android:layout_marginBottom="25dip"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/putiah" />

        <TextView
            android:id="@+id/notif_dialog_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Message"
            android:textAppearance="@style/txtPrefKecil"
            android:textColor="@color/putiah" />
    </LinearLayout>

</RelativeLayout>