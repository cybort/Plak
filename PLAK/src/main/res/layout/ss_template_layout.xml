<?xml version="1.0" encoding="utf-8"?>
<hello.dcsms.plak.widget.AwesomeFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/frame_root_tmplt"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/merah"
    android:orientation="vertical"
    android:paddingTop="?android:actionBarSize">

    <RelativeLayout
        android:id="@+id/templ_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <android.support.v4.view.ViewPager
            android:id="@+id/templ_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


        <RelativeLayout
            android:padding="@dimen/dimen10"
            android:id="@+id/templ_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#44000000"
            >
            <ImageView
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:id="@+id/preview_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_drawer" />
            <LinearLayout

                android:paddingLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/templ_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hello_world"
                    android:textAppearance="@style/txtKecil.Putiah"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/templ_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hello_world"
                    android:textAppearance="@style/txtKecil.Putiah" />
            </LinearLayout>

            <hello.dcsms.plak.widget.CustomButton
                android:visibility="gone"
                android:id="@+id/templ_apply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/templ_wallp"
                android:focusable="false"
                android:paddingRight="20dp"
                android:text="Apply"
                android:textAppearance="@style/txtKecil.PutiahState"
                android:textStyle="bold" />

            <hello.dcsms.plak.widget.CustomButton
                android:visibility="gone"
                android:id="@+id/templ_wallp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:focusable="false"
                android:paddingRight="20dp"
                android:text="Wallpaper"
                android:textAppearance="@style/txtKecil.PutiahState"
                android:textStyle="bold" />
        </RelativeLayout>
        <ImageView
            android:id="@+id/templ_isapply"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/apply"
            android:padding="@dimen/dimen20"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
</hello.dcsms.plak.widget.AwesomeFrameLayout>